<?xml version='1.0' encoding='utf-8'?>
<widget id="com.diblet.guiagchu" version="2.0.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Guía Gchú</name>
    <description>
        App for Guiagchu.com
    </description>
    <author email="contacto@diblet.com" href="http://diblet.com">
        Diblet
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access origin="tel:*" launch-external="yes" />
    <access origin="mailto:*" launch-external="yes" />
    <access origin="http://*/*" launch-external="yes" />
    <access origin="https://*/*" launch-external="yes" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <preference name="android-targetSdkVersion" value="29"/>
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/res/icon/android/logotipo.png" />
        <icon density="mdpi" src="www/res/icon/android/logotipo.png" />
        <icon density="hdpi" src="www/res/icon/android/logotipo.png" />
        <icon density="xhdpi" src="www/res/icon/android/logotipo.png" />
        <icon density="xxhdpi" src="www/res/icon/android/logotipo.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/logotipo.png" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="orientation" value="portrait" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
</widget>
